<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_zone_frame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_zone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/zones"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_34px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_room_on"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tap_device_on"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/on"
                android:textColor="@color/color_text_on" />

            <TextView
                android:id="@+id/tv_room_off"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_tap_device_off"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/off"
                android:textColor="@color/color_text_off" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_zone_menu"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/app_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_zone_device"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:src="@drawable/zone_groupdevice" />

            <ImageView
                android:id="@+id/iv_zone_panel"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:src="@drawable/zone_colorpanel" />

            <ImageView
                android:id="@+id/iv_zone_breath"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:src="@drawable/zone_breath" />

            <ImageView
                android:id="@+id/iv_zone_music"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:src="@drawable/zone_musicmain" />

            <ImageView
                android:id="@+id/iv_zone_alarm"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:src="@drawable/zone_edittimmer" />

            <ImageView
                android:id="@+id/iv_zone_edit"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:src="@drawable/zone_editpencil" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>