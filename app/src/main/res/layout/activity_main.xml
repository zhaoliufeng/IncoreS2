<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".view.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_status_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/rl_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_title_height"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:padding="7dp"
                android:src="@drawable/icon_setting"
                android:visibility="visible" />

            <ImageView
                android:src="@drawable/logo_title"
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="30dp" />


            <TextView
                android:id="@+id/tv_menu_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:padding="7dp"
                android:text="@string/confirm"
                android:textColor="@color/black_333"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_menu_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:padding="7dp"
                android:src="@drawable/icon_help" />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_main_zone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_main_zone"
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_tab_zones_unselected" />

            <TextView
                android:id="@+id/tv_main_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="4dp"
                android:text="@string/zones"
                android:textColor="@color/grey_929292"
                android:textSize="@dimen/tab_title_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_device"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_main_device"
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_tab_device_selected" />

            <TextView
                android:id="@+id/tv_main_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="4dp"
                android:text="@string/devices"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/tab_title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_scene"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_main_scene"
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_tab_scenes_unselected" />

            <TextView
                android:id="@+id/tv_main_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="4dp"
                android:text="@string/scenes"
                android:textColor="@color/grey_929292"
                android:textSize="@dimen/tab_title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_schedules"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_main_schedules"
                android:layout_width="@dimen/tab_icon_size"
                android:layout_height="@dimen/tab_icon_size"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_tab_schedules_unselected" />

            <TextView
                android:id="@+id/tv_main_schedules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="4dp"
                android:text="@string/schedules"
                android:textColor="@color/grey_929292"
                android:textSize="@dimen/tab_title_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>